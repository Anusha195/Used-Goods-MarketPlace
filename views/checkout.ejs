<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <style>
    .container {
      max-width: 600px;
      margin: auto;
      padding: 30px;
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
    }

    label {
      font-weight: 600;
      margin-top: 20px;
      display: block;
      color: #444;
    }

    select,
    input[type="text"] {
      width: 100%;
      padding: 12px;
      margin-top: 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 15px;
      box-sizing: border-box;
    }

    button {
      width: 100%;
      padding: 14px;
      margin-top: 30px;
      background-color: #007bff;
      color: white;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background-color: #0056b3;
    }

    .success {
      text-align: center;
      background-color: #d4edda;
      border: 1px solid #c3e6cb;
      color: #155724;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .back-btn {
      display: block;
      text-align: center;
      margin-top: 20px;
      color: #007bff;
      text-decoration: none;
      font-size: 15px;
    }

    .back-btn:hover {
      text-decoration: underline;
    }

    #upiFields {
      margin-top: 20px;
      padding: 15px;
      background-color: #f0f8f5;
      border-left: 4px solid #28a745;
      border-radius: 6px;
    }

    .sub-label {
      font-weight: 500;
      font-size: 14px;
      margin-top: 12px;
      margin-bottom: 6px;
      color: #333;
    }

    .upi-info {
      font-size: 15px;
      margin-bottom: 12px;
      color: #2d7033;
    }
  </style>
</head>
<body>
  <%- include('partials/header', { username: username, title: 'Dashboard' }) %>
  <main>
  <div class="container">
    <h2>Checkout for <%= product.title %></h2>
    <h3>Pay an amount of <%= product.price.toLocaleString() %> through UPI or place COD order</h3>

    <% if (success) { %>
      <p class="success">Order placed successfully!</p>
    <% } %>

    <form method="POST" action="/place-order">
      <input type="hidden" name="productId" value="<%= product._id %>">

      <label for="address">Select Address:</label>
      <select name="addressIndex" id="address" required>
        <% addresses.forEach((address, index) => { %>
          <option value="<%= index %>">
            <%= address.addressLine %>, <%= address.city %>, <%= address.state %>, <%= address.zip %>, <%= address.country %>
          </option>
        <% }); %>
      </select>

      <label for="paymentMethod">Payment Method:</label>
      <select name="paymentMethod" id="paymentMethod" onchange="toggleUPIDetails()" required>
        <option value="COD">Cash on Delivery</option>
        <option value="UPI">UPI</option>
      </select>

      <div id="upiFields" style="display: none;">
        <div class="upi-info">
          Seller's UPI ID: <strong><%= seller.sellerDetails.upiId || 'Not Available' %></strong>
        </div>

        <label class="sub-label" for="utrId">Enter UPI UTR ID:</label>
        <input type="text" id="utrId" name="utrId" placeholder="Enter UPI Transaction UTR ID">
      </div>

      <button type="submit">Place Order</button>
    </form>

    <a class="back-btn" href="/product/<%= product._id %>">‚Üê Back to Product</a>
  </div>
</main>
  <%- include('partials/footer') %>

  <script>
    function toggleUPIDetails() {
      const paymentMethod = document.getElementById('paymentMethod').value;
      const upiFields = document.getElementById('upiFields');
      upiFields.style.display = paymentMethod === 'UPI' ? 'block' : 'none';
    }
  </script>
</body>
</html>
