<!DOCTYPE html>
<html>
  <head>
    <title>My Listings</title>
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
      }

      .page-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      .content {
        flex: 1;
      }

      body {
        background: #f5f7fa;
        color: #333;
      }

      h1.center-title {
        text-align: center;
        margin-bottom: 30px;
        color: #222;
      }

      .center-text {
        text-align: center;
        color: #888;
        font-size: 18px;
      }

      .listings {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .card-content {
        padding: 15px 20px;
      }

      .card h3 {
        margin-top: 0;
        font-size: 20px;
        color: #333;
      }

      .card p {
        margin: 6px 0;
        font-size: 14px;
        color: #444;
      }

      .btn-group {
        display: flex;
        justify-content: space-between;
        padding: 15px 20px 20px;
      }

      .edit-btn,
      .delete-btn {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        font-size: 14px;
      }

      .edit-btn {
        background-color: #f3b7a5;
        color: black;
      }

      .delete-btn {
        background-color: rgb(44, 42, 42);
        color: white;
      }

      .delete-btn:hover {
        background-color: rgb(28, 26, 26);
      }

      .back-btn {
        text-align: center;
        margin-top: 40px;
        margin-left: 42%;
        color: blue;
        text-decoration: none;
        font-size: 15px;
        padding: 10px;
      }

      .back-btn:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header', { username: username, title: 'Dashboard' })
    %>
    <main>
      <h1 class="center-title">My Listings</h1>
      <% if (listings.length === 0) { %>
      <p class="center-text">You haven't posted anything yet.</p>
      <% } else { %>
      <div class="listings">
        <% listings.forEach(item => { %>
        <div class="card">
          <img src="<%= item.imageUrl %>" alt="Image of <%= item.title %>" />
          <div class="card-content">
            <h3><%= item.title %></h3>
            <p><strong>Price:</strong> â‚¹<%= item.price %></p>
            <p><strong>Category:</strong> <%= item.category %></p>
            <p>
              <strong>Posted On:</strong>
              <%= item.postedAt ? new Date(item.postedAt).toLocaleDateString() :
              'N/A' %>
            </p>
            <p><%= item.description %></p>
          </div>
          <div class="btn-group">
            <a href="/edit/<%= item._id %>">
              <button class="edit-btn">Edit</button>
            </a>
            <form action="/delete/<%= item._id %>" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>

      <% } %>
      <a class="back-btn" href="/dashboard"><-- Back to Dashboard</a>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
